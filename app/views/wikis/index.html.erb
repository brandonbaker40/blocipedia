<h1>Listing Wikis</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>

      <% if current_user.premium? || current_user.admin? %>
      <th>Private</th>
      <% end %>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @wikis.each do |wiki| %>
      <tr>
        <td><%= wiki.title %></td>
        <td><%= markdown(wiki.body) %></td>

        <% if current_user.premium? || current_user.admin? %>
        <td><%= wiki.private %></td>
        <% end %>

        <td><%= link_to 'See More', wiki %></td>

        <% if current_user.premium? || current_user.admin? %>
        <td><%= link_to 'Edit', edit_wiki_path(wiki) %></td>
        <td><%= link_to 'Destroy', wiki, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>

      </tr>

      <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Wiki', new_wiki_path %>
