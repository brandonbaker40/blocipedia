<h1>Editing Wiki</h1>

<%= render 'form' %>

<%= render partial: 'collaborators/form', locals: { wiki: @wiki } %>

<h2>Collaborators</h2>
    <% @wiki.collaborators.each do |collaborator| %>
      <p>
        <%= collaborator.user.email %>
        <%= link_to "Remove", wiki_collaborator_path(@wiki, collaborator), :method => :delete %>
      </p>
      <% end %>



<%= link_to 'Show', @wiki %> |
<%= link_to 'Back', wikis_path %>
